<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('header') %> <!-- Include the header if you have one -->

    <div class="container">
        <h1 class="my-4">User List</h1>

        <!-- Button to Add New User -->
        <a href="/adduser" class="btn btn-primary mb-3">Add New User</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Address</th>
                    <th>Sex</th>
                    <th>Email</th>
                    <th>Actions</th> <!-- New column for actions -->
                </tr>
            </thead>
            <tbody>
                <% if (users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.fullname %></td>
                            <td><%= user.address %></td>
                            <td><%= user.sex %></td>
                            <td><%= user.email %></td>
                            <td>
                                <!-- View Details button -->
                                <a href="/userdetails/<%= user.username %>" class="btn btn-info btn-sm">View Details</a>

                                <!-- Update button -->
                                <a href="/edituser/<%= user.username %>" class="btn btn-warning btn-sm">Update</a>

                                <!-- Delete button -->
                                <form action="/deleteuser/<%= user.username %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">No users found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <%- include('footer') %> <!-- Include the footer if you have one -->
</body>
</html>

